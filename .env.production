# Production Environment Configuration
# Copy this file to .env.production.local and update with your production values

# Database Configuration
DATABASE_URL="postgresql://postgres:your-secure-password@db:5432/pbsports"
POSTGRES_DB="pbsports"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your-secure-password"
DB_PORT=5432

# Server Configuration
PORT=3000
API_PORT=3000
NODE_ENV="production"

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET="your-super-secure-jwt-secret-key-at-least-32-characters-long"
JWT_EXPIRES_IN="1h"

# League Configuration
LEAGUE_SLUG="spring-2024"
LEAGUE_NAME="Spring 2024 League"
LEAGUE_SEASON="Spring 2024"

# Security Configuration
BCRYPT_ROUNDS=12
AUTO_APPROVE_JOINS=false

# Rate Limiting Configuration
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX_REQUESTS=10
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100