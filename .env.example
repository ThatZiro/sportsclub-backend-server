# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pbsports"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="1h"

# Server Configuration
PORT=3000
NODE_ENV="development"

# League Configuration (for "one league" assumption)
LEAGUE_SLUG="spring-2024"
LEAGUE_NAME="Spring 2024 League"
LEAGUE_SEASON="Spring 2024"

# Security
BCRYPT_ROUNDS=12
AUTO_APPROVE_JOINS=false

# Rate Limiting
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX_REQUESTS=10
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100