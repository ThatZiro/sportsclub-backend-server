# Database Configuration
# Replace with your actual PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# JWT Configuration
# Generate a secure random string for production: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="1h"

# Server Configuration
PORT=3000
NODE_ENV="development"

# League Configuration
# Configure your league details
LEAGUE_SLUG="your-league-slug"
LEAGUE_NAME="Your League Name"
LEAGUE_SEASON="Your Season"

# Security Settings
BCRYPT_ROUNDS=12
AUTO_APPROVE_JOINS=false

# Rate Limiting Configuration
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX_REQUESTS=10
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# AWS Configuration (Optional - for production deployment)
# AWS_REGION="us-east-1"
# AWS_SECRET_NAME="pbsports/production"

# Production Database (Optional - for AWS RDS)
# DATABASE_URL="postgresql://username:password@your-rds-endpoint:5432/pbsports"